@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => 
                                                                                                               DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MobileNavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
    
</MudLayout>

@code {
    
    bool _drawerOpen = false;

    void DrawerToggle() => _drawerOpen = !_drawerOpen;
    
}